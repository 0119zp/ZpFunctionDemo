<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="zp.com.zpfunctiondemo">

    <application
        android:name=".ZpApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 系统功能 start-->
        <activity android:name=".system.activity.ZpSystemActivity" />
        <!-- 手机摇一摇 -->
        <activity android:name=".system.activity.ZpSystemRockActivity" />

        <!-- 系统功能 end-->

        <!-- 自定义功能 start -->
        <activity android:name=".custom.activity.ZpCustomActivity"/>
        <!-- viewpage tab -->
        <activity android:name=".custom.activity.ZpPagerActivity"/>

        <!-- 自定义功能 end -->


    </application>

</manifest>